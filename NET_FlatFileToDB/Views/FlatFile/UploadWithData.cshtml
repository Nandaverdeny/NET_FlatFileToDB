
@{
    ViewBag.Title = "Upload With Data";
}

<h2>Upload With Data</h2>

<form action="UploadWithData" method="post" enctype="multipart/form-data">

    <div class="form-horizontal">
        
        <hr />

        <div class="form-group">
            <label for="file" class="control-label col-md-2">Filename:</label>
            <div class="col-md-10">
                <input type="file" name="file" id="file" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="file" class="control-label col-md-2">Name:</label>
            <div class="col-md-10">
                <input type="text" name="name" id="name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="file" class="control-label col-md-2">Description:</label>
            <div class="col-md-10">
                <input type="text" name="description" id="description" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btnSubmit" type="submit" value="Create" class="btn btn-default" />
                @if (ViewBag.Status)
                {
                    <p style="color : @ViewBag.MessageColor;">Upload @ViewBag.Message !!!</p>
                }
            </div>
        </div>
    </div>

</form>